<mapper namespace="com.care.stay.admin.AdminStayMapper">

	<select id="stayCountHotel" resultType="int">
	  	SELECT COALESCE(nvl(max(no),0) + 1, 0) FROM hotel
	</select>
	

	
	<select id="stayCountCamping" resultType="int">
	  	SELECT COALESCE(nvl(max(no),0) + 1, 0) FROM camping
	</select>
	

 

